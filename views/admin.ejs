<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar', { pageTitle: 'Page Title' }) %>
        <div class="container mt-4">
            <h1 class="mb-4">Dashboard</h1>
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Animals</h5>
                            <a href="/animals/0/edit" class="btn btn-primary btn-sm">Add</a>
                        </div>
                        <div class="card-body">
                            <% if (animals && animals.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Status</th>
                                                <th>Breed</th>
                                                <th>Habitat</th>
                                                <th>Visits</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% animals.forEach(animal=> { %>
                                                <tr>
                                                    <td>
                                                        <%= animal.prenom %>
                                                    </td>
                                                    <td><span
                                                            class="badge bg-<%= animal.etat === 'Healthy' ? 'success' : 'warning' %>">
                                                            <%= animal.etat %>
                                                        </span></td>
                                                    <td>
                                                        <%= animal.Race ? animal.Race.label : 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <%= animal.Habitat ? animal.Habitat.nom : 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <%= animal.visits %>
                                                    </td>
                                                    <td>
                                                        <a href="/animals/<%= animal.animal_id %>/edit"
                                                            class="btn btn-secondary btn-sm">Edit</a>
                                                        <a href="/api/animals/<%= animal.animal_id %>/delete"
                                                            class="btn btn-error btn-sm">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No animals found.</p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Habitats</h5>
                            <a href="/habitats/0/edit" class="btn btn-primary btn-sm">Add</a>
                        </div>
                        <div class="card-body">
                            <% if (habitats && habitats.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Description</th>
                                                <th>Comment</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% habitats.forEach(habitat=> { %>
                                                <tr>
                                                    <td>
                                                        <%= habitat.nom %>
                                                    </td>
                                                    <td>
                                                        <%= habitat.description %>
                                                    </td>
                                                    <td>
                                                        <%= habitat.commentaire_habitat %>
                                                    </td>
                                                    <td>
                                                        <a href="/habitats/<%= habitat.habitat_id %>/edit"
                                                            class="btn btn-secondary btn-sm">Edit</a>
                                                        <a href="/api/habitats/<%= habitat.habitat_id %>/delete"
                                                            class="btn btn-error btn-sm">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No habitats found.</p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Services Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Services</h5>
                            <a href="/services/0/edit" class="btn btn-primary btn-sm">Add</a>
                        </div>
                        <div class="card-body">
                            <% if (services && services.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Description</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% services.forEach(service=> { %>
                                                <tr>
                                                    <td>
                                                        <%= service.nom %>
                                                    </td>
                                                    <td>
                                                        <%= service.description %>
                                                    </td>
                                                    <td>
                                                        <a href="/services/<%= service.service_id %>/edit"
                                                            class="btn btn-secondary btn-sm">Edit</a>
                                                        <a href="/api/services/<%= service.service_id %>/delete"
                                                            class="btn btn-error btn-sm">Delete</a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No services found.</p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Users List</h5>
                            <a href="/users/create" class="btn btn-primary btn-sm">Add User</a>
                        </div>
                        <div class="card-body">
                            <% if (users && users.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Username</th>
                                                <th>Role</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% users.forEach(user=> { %>
                                                <tr>
                                                    <td>
                                                        <%= user.nom %>
                                                    </td>
                                                    <td>
                                                        <%= user.prenom %>
                                                    </td>
                                                    <td>
                                                        <%= user.username %>
                                                    </td>
                                                    <td>
                                                        <%= user.profile %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No users found.</p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Recent Veterinary Reports</h5>
                            <a href="/reports" class="btn btn-primary btn-sm">View All</a>
                        </div>
                        <div class="card-body">
                            <% if (reports && reports.length> 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Animal</th>
                                                <th>Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% reports.forEach(report=> { %>
                                                <tr>
                                                    <td>
                                                        <%= new Date(report.date).toLocaleDateString() %>
                                                    </td>
                                                    <td>
                                                        <%= report.Animal ? report.Animal.prenom : 'N/A' %>
                                                    </td>
                                                    <td>
                                                        <%= report.detail.substring(0, 50) %>...
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No reports found.</p>
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Total Animals</h5>
                            <h2 class="card-text">
                                <%= animals ? animals.length : 0 %>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Total Users</h5>
                            <h2 class="card-text">
                                <%= users ? users.length : 0 %>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Total Habitats</h5>
                            <h2 class="card-text">
                                <%= habitats ? habitats.length : 0 %>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Recent Reports</h5>
                            <h2 class="card-text">
                                <%= reports ? reports.length : 0 %>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
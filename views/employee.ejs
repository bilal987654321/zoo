<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Veterinary Management System - Employee Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { pageTitle: 'Page Title'}) %>

    <div class="container mt-4">
        <h1 class="mb-4">Employee Dashboard</h1>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Avis List</h5>
                    </div>
                    <div class="card-body">
                        <% if (avis && avis.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% avis.forEach(avi => { %>
                                            <tr>
                                                <td><%= avi.pseudo %></td>
                                                <td><%= avi.commentaire %></td>
                                                <td>
                                                    <a href="/avis/<%= avi.avis_id %>/accept" class="btn btn-success btn-sm">Accept</a>
                                                    <a href="/api/avis/<%= avi.avis_id %>/delete" class="btn btn-danger btn-sm">Delete</a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">No avis found.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
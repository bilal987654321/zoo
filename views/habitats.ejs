<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Habitats</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar', { pageTitle: 'Page Title'}) %>

    <div class="container mt-4">
        <h1 class="mb-4">Habitats</h1>
        <div class="row">
            <% if (habitats && habitats.length > 0) { %>
                <% habitats.forEach(habitat => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><%= habitat.nom %></h5>
                            </div>
                            <div class="card-body">
                                <p><%= habitat.description %></p>
                                <h6>Animals:</h6>
                                <ul>
                                    <% habitat.Animals.forEach(animal => { %>
                                        <li>
                                            <%= animal.prenom %>
                                        </li>
                                    <% }); %>
                                </ul>
                                <a href="/animals?habitat_id=<%= habitat.habitat_id %>" class="btn btn-primary btn-sm">View</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-muted">No habitats found.</p>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>